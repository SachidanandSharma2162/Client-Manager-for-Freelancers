<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Freelancers Hub</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 text-gray-800">
  <!-- Navbar -->
  <nav class="bg-white shadow-md">
    <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
      <h1 class="text-2xl font-bold text-indigo-600">FreelancersHub</h1>
      <ul class="flex space-x-6">
        <li><a href="#" class="text-gray-700 hover:text-indigo-600 font-medium">Home</a></li>
        <li><a href="#" class="text-gray-700 hover:text-indigo-600 font-medium">About</a></li>
        <li><a href="#" class="text-gray-700 hover:text-indigo-600 font-medium">Contact</a></li>
      </ul>
    </div>
  </nav>

  <!-- Hero Section with Forms -->
  <section class="flex flex-col md:flex-row items-center justify-center px-6 py-16 max-w-6xl mx-auto">
    <!-- Image -->
    <div class="md:w-1/2 mb-10 md:mb-0">
      <img src="/images/free.jpeg" alt="Freelancer" class="rounded-2xl shadow-md" />
    </div>

    <!-- Forms -->
    <div class="md:w-1/2 md:pl-10 w-full">
      <div class="bg-white rounded-xl shadow-lg p-8 space-y-6">
        <h2 class="text-xl font-bold text-center text-indigo-600">Welcome Back</h2>

        <!-- Login Form -->
        <form action="/login" method="POST" class="space-y-4">
          <input type="email" name="email" placeholder="Email" class="w-full px-4 py-2 border rounded-lg" required>
          <input type="password" name="password" placeholder="Password" class="w-full px-4 py-2 border rounded-lg" required>
          <button type="submit" class="w-full bg-indigo-600 hover:bg-indigo-700 text-white py-2 rounded-lg">Login</button>
        </form>

        <div class="text-center text-sm text-gray-500">or</div>

        <!-- Signup Form -->
        <form action="/signup" method="POST" class="space-y-4">
          <input type="text" name="name" placeholder="Full Name" class="w-full px-4 py-2 border rounded-lg" required>
          <input type="email" name="email" placeholder="Email" class="w-full px-4 py-2 border rounded-lg" required>
          <input type="password" name="password" placeholder="Password" class="w-full px-4 py-2 border rounded-lg" required>
          <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white py-2 rounded-lg">Register</button>
        </form>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-white shadow-inner mt-10">
    <div class="max-w-7xl mx-auto px-4 py-6 text-center text-sm text-gray-500">
      &copy; <%= new Date().getFullYear() %> FreelancersHub. All rights reserved.
    </div>
  </footer>
</body>
</html>
